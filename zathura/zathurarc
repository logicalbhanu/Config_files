# Copy selection to clipboard
set selection-clipboard clipboard

# Open document in fit-width mode by default
set adjust-open "best-fit"

# zoom and scroll step size
set zoom-step 10 
set scroll-step 80

# enable incremental search
set incremental-search true

# zoom
map <C-i> zoom in
map <C-o> zoom out

# show graphical elements such as vertical and horizonatal scroll-bar
set guioptions "cshv" # to display commandline(c), statusbar(s), 
                      # vertical_scroll_bar(v), horizontal_scroll_bar(h)
